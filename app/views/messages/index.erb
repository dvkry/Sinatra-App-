<% @messages.each do |message| %>
  <div class="mesasges">
    <h3><a href="/messages/<%= message.id %>"> <small>(by: <%= message.author %>)</small></a></h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <a href="http://<%= message.url %>"><%= message.url %></a>
    </p>
  </div>
<% end %>